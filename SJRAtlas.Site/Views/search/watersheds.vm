#capturefor(headline)
<h1>Search</h1>
<p>You've searched Watersheds for: <span class="search_query">&ldquo;$!{query}&rdquo;</span>. Please select one of the below locations to continue.</p>
#end

<div id="content" class="clearfix">	
	<div class="innerwrap">
		<div class="textbox yui-gc">			
            <div class="yui-u first">
                <h2>Watershed Search Results</h2>                
                #if($results.Length == 0)
                    <p>Sorry, No Watersheds Found.</p>                
                #else                    
                    <table style="width: 100%;">
                        <thead>
                            <tr>
                                <th style="font-weight: bold;">Name</th>
                                <th style="font-weight: bold;">Drainage Code</th>
                                <th style="font-weight: bold;">Flows Into</th>
                            </tr>
                        </thead>
                        <tbody>                        
                        #foreach( $result in $results )
                            <tr class="watershed-result">
                                <td class="name">
                                    $Url.Link($result.Name, "%{controller='watershed', action='view', querystring='drainageCode=$result.DrainageCode'}")
                                </td>
                                <td class="drainage-code">$result.DrainageCode</td>
                                <td class="flows-into">$result.FlowsInto</td>
                            </tr>                      
                        #end
                        </tbody>
                    </table>
                #end
            </div>
            <div class="yui-u">
                <h2>Need Help?</h2>
                <p>You've searched the Atlas for: <span class="search_query">&ldquo;$!{query}&rdquo;</span>.</p>
                <p>If you haven't found what you are looking for you may also want to try the following:</p>
                <ul>
                    <li>$Url.Link('Advanced Search', "%{controller='search', action='index'}")</li>
                    <li>$Url.Link('Search Tips', "%{controller='search', action='tips'}")</li>
                </ul>
            </div>              
        </div>
	</div>
</div>